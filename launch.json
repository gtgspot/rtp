{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Run Windows Hermes",
            "request": "launch",
            "type": "reactnativedirect",
            "cwd": "${workspaceFolder}",
            "enableDebug": false,
            "platform": "windows"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run esbuild",
            "runtimeExecutable": "esbuild",
            "cwd": "${workspaceFolder}/node_modules/vite",
            "args": []
        },
        {
            "name": "Advanced Compiled Configuration with DNS Propagation",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/path/to/your/program.js",
            "args": [
                "--dns-propagation"
            ],
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "preLaunchTask": "build",
            "postDebugTask": "dns-propagation",
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "timeout": 30000
        }
    ],
    "tasks": {
        "build": {
            "type": "shell",
            "command": "npm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        "dns-propagation": {
            "type": "shell",
            "command": "curl -s https://dnspropagation.net/api/check?domain=yourdomain.com",
            "group": "none",
            "presentation": {
                "reveal": "always"
            }
        }
    }
}